<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".do_not_do"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="10dp"
                android:text="গর্ভাবস্থার কি কি করা উচিত নয়"
                android:textColor="black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="আপনার গর্ভাবস্থায় কি করতে হবে না সে সম্পর্কে অনেক কঠোর নিয়ম নেই তবে কিছু কাজ আপনি করবেন না যা আপনার ক্রমবর্ধমান শিশুর স্বাস্থ্য এবং নিরাপত্তার ঝুঁকি হয়। "
                android:textColor="black"
                android:textStyle="normal"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="খাবার :"
                android:textColor="black"
                android:textStyle="bold"
                android:textSize="20dp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>